{
  "name": "vite-plugin-wasm",
  "version": "3.2.2",
  "description": "Add WebAssembly ESM integration (aka. Webpack's `asyncWebAssembly`) to Vite and support `wasm-pack` generated modules.",
  "types": "./dist/index.d.ts",
  "main": "./dist/index.js",
  "exports": {
    "types": "./exports/types.d.ts",
    "import": "./exports/import.mjs",
    "require": "./exports/require.cjs"
  },
  "repository": "https://github.com/Menci/vite-plugin-wasm",
  "author": "Menci <huanghaorui301@gmail.com>",
  "license": "MIT",
  "keywords": [
    "vite",
    "plugin",
    "wasm",
    "webassembly",
    "wasm-pack",
    "es-modules",
    "modules"
  ],
  "scripts": {
    "build": "tsc",
    "test": "cross-env NODE_NO_WARNINGS=1 NODE_OPTIONS=--experimental-vm-modules jest --verbose --coverage --forceExit",
    "format": "prettier --write '**/*.{mjs,cjs,js,ts}'",
    "pretest": "yarn --cwd e2e && playwright install firefox"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.23.5",
    "@babel/core": "^7.23.5",
    "@jest/types": "^29.6.3",
    "@jsona/openapi": "^0.2.5",
    "@syntect/wasm": "^0.0.4",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.10",
    "cross-env": "^7.0.3",
    "cz-conventional-changelog": "^3.3.0",
    "esbuild": "^0.19.8",
    "express": "^4.18.2",
    "jest": "^29.7.0",
    "jest-extended": "^4.0.2",
    "playwright": "^1.40.1",
    "prettier": "^3.1.0",
    "terser": "^5.24.0",
    "ts-jest": "^29.1.1",
    "typescript": "^5.3.2",
    "vite": "^5.0.4",
    "wait-port": "^1.1.0"
  },
  "peerDependencies": {
    "vite": "^2 || ^3 || ^4 || ^5"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "files": [
    "/dist",
    "/exports"
  ]
}